@inherits LayoutComponentBase
@inject HttpClient HttpClient

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="7">
            <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)" />
            <RadzenLink Text="Mozhar's Digital Garden" Style="white-space: nowrap" Path="/" />
            <RadzenSplitter />
            <RadzenAppearanceToggle />
            <RadzenLabel Text="Theme" />
            <ThemeSelector />
        </RadzenStack>
    </RadzenHeader>
    <HeadContent>
        <RadzenTheme Theme="material-dark" />
    </HeadContent>
    <RadzenComponents />
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded">
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter Style="text-align: center; position: static;">
        Built with ❤️ using Standalone Blazor WebAssembly
    </RadzenFooter>
</RadzenLayout>


@code {
    private bool _sidebarExpanded = true;
}